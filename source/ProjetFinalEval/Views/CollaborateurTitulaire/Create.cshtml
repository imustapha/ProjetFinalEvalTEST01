@model ProjetFinalEval.Models.RegisterViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="~/Home/Accueil">Acceuil</a>
            <i class="fa fa-angle-right"></i>
            <a href="~/ConllaborateurTitulaire/Index">Liste des Collaborateur Titulaires</a>
            <i class="fa fa-angle-right"></i>
            <a href="~/CollaborateurTitulaire/Create">Create</a>
            <i class="fa fa-angle-right"></i>
        </li>

    </ul>

</div>

<div class="col-md-12">
    <!-- BEGIN VALIDATION STATES-->
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gift"></i>Advance Validation
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
                <a href="#portlet-config" data-toggle="modal" class="config">
                </a>
                <a href="javascript:;" class="reload">
                </a>
                <a href="javascript:;" class="remove">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            <!-- BEGIN FORM-->
            <form action="Create" method="Post" id="form_sample_3" class="form-horizontal" enctype="multipart/form-data">
                <div class="form-body">
                    <div class="alert alert-danger display-hide">
                        <button class="close" data-close="alert"></button>
                        You have some form errors. Please check below.
                    </div>
                    <div class="alert alert-success display-hide">
                        <button class="close" data-close="alert"></button>
                        Le Collaborateur a ete ajouter avec succes
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            Email
                        </label>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-addon">
                                    <i class="fa fa-envelope"></i>
                                </span>
                                @Html.TextBoxFor(M=> M.Email, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Mots de Passe<span class="required">
                                *
                            </span>
                        </label>
                        <div class="col-md-4">
                            <div class="input-icon right">
                                <i class="fa"></i>
                                @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Confirme Mots de Passe<span class="required">
                                *
                            </span>
                        </label>
                        <div class="col-md-4">
                            <div class="input-icon right">
                                <i class="fa"></i>
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { type = "password", @class = "form-control"})
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Nom <span class="required">
                                *
                            </span>
                        </label>
                        <div class="col-md-4">
                            <div class="input-icon right">
                                <i class="fa"></i>
                                @Html.TextBoxFor(M => M.NOM, new { @class = "form-control", required = "required" })

                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Prenom <span class="required">
                                *
                            </span>
                        </label>
                        <div class="col-md-4">
                            <div class="input-icon right">
                                <i class="fa"></i>
                                @Html.TextBoxFor(M => M.PRENOM, new { @class = "form-control", required = "required" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">
                            Image <span class="required">
                                *
                            </span>
                        </label>
                        <div class="col-md-4">
                            <div class="input-icon right">
                                <i class="fa"></i>
                                @Html.TextBoxFor(Model => Model.File, new { type = "file" })

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                            Fonction <span class="required">
                                *
                            </span>
                        </label>
                        <div class="col-md-4">
                            @Html.DropDownListFor(M => M.IDFONCTION, ViewBag.IDFONCTION as SelectList, "Selectionner la fonction", htmlAttributes: new { @Class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">
                           Role
                        </label>
                        <div class="col-md-4">
                            <div class="radio-list" data-error-container="#form_2_membership_error">
                                <label>
                                    @Html.RadioButtonFor(M=>M.FLAGEVAL, true)
                                    Evaluateur                                    
                                </label>
                                <label>
                                    @Html.RadioButtonFor(M => M.FLAGEVAL, false, new { Checked = "checked" })
                                    Non Evaluateur
                                </label>
                            </div>
                            <div id="form_2_membership_error">
                            </div>
                        </div>
                    </div>


                </div>
                <div class="form-actions">
                    <div class="row">
                        <div class="col-md-offset-3 col-md-9">
                            <button type="submit" class="btn green">Submit</button>
                            <button type="reset" class="btn red">Cancel</button>
                            <a href="@Url.Action("Index")" class="btn default">Retour</a>
                        </div>
                    </div>
                </div>
            </form>
            <!-- END FORM-->
        </div>
        <!-- END VALIDATION STATES-->
    </div>
</div>
