@model ProjetFinalEval.collaborateurpe

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutStablePage1.cshtml";
}
<ul class="page-breadcrumb breadcrumb">
    <li>

        <a href="~/Home/Accueil">Accueil</a>
        <i class="fa fa-circle"></i>
        <a href="~/CollaborateurPE/Index">Liste des COllaborateurPE</a>
        <i class="fa fa-circle"></i>
        <a href="~/CollaborateurPE/Edit/@Model.IDCOLLABORATEURPE">Edit</a>
        <i class="fa fa-circle"></i>
    </li>

</ul>
<div class="row">
    <div class="col-md-12">
        <div class="row margin-top-20">
            <div class="col-md-12">
                <!-- BEGIN PROFILE SIDEBAR -->
                <div class="profile-sidebar">
                    <!-- PORTLET MAIN -->
                    <div class="portlet light profile-sidebar-portlet">
                        <!-- SIDEBAR USERPIC -->
                        <div class="profile-userpic">
                            <img src="data:image/png;base64,@Convert.ToBase64String(Model.IMAGEPE, 0,Model.IMAGEPE.Length)" class="img-responsive" />
                        </div>
                        <!-- END SIDEBAR USERPIC -->
                        <!-- SIDEBAR USER TITLE -->
                        <div class="profile-usertitle">
                            <div class="profile-usertitle-name">
                                @Html.DisplayFor(model => model.NOMPE) @Html.DisplayFor(model => model.PRENOMPE)
                            </div>
                            <div class="profile-usertitle-job">
                                @Html.DisplayFor(model => model.aspnetusers.Email)
                            </div>
                            <div class="profile-usertitle-job">
                                @Html.DisplayFor(model => model.STATUT)
                            </div>
                            <div class="profile-usertitle-job">
                                @Html.DisplayFor(model => model.fonction.NOMFONCTION)
                            </div>
                            <div>
                                <br />
                            </div>
                        </div>
                        <!-- END SIDEBAR USER TITLE -->
                        <!-- SIDEBAR BUTTONS -->
                        <!-- END SIDEBAR BUTTONS -->
                        <!-- SIDEBAR MENU -->
                        <div class="profile-usermenu">


                        </div>
                        <!-- END MENU -->
                    </div>
                    <!-- END PORTLET MAIN -->
                    <!-- PORTLET MAIN -->
                    <!-- END PORTLET MAIN -->
                </div>
                <!-- END BEGIN PROFILE SIDEBAR -->
                <!-- BEGIN PROFILE CONTENT -->
                <div class="profile-content">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="portlet light">
                                <div class="portlet-title tabbable-line">
                                    <div class="caption caption-md">
                                        <i class="icon-globe theme-font hide"></i>
                                        <span class="caption-subject font-blue-madison bold uppercase">Profile</span>
                                    </div>
                                    <ul class="nav nav-tabs">
                                        <li class="active">
                                            <a href="#tab_1_1" data-toggle="tab">Personal Info</a>
                                        </li>
                                        <li>
                                            <a href="#tab_1_2" data-toggle="tab">Change Avatar</a>
                                        </li>

                                    </ul>
                                </div>
                                <div class="portlet-body">
                                    <div class="tab-content">
                                        <!-- PERSONAL INFO TAB -->
                                        <div class="tab-pane active" id="tab_1_1">
                                            @using (Html.BeginForm())
                                            {
                                                @Html.AntiForgeryToken()
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                @Html.HiddenFor(model => model.IDCOLLABORATEURPE)

                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.NOMPE, "Nom", htmlAttributes: new { @class = "control-label col-md-2" })
                                                    @Html.EditorFor(model => model.NOMPE, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.NOMPE, "", new { @class = "text-danger" })

                                                </div>
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.PRENOMPE, "Prénom", htmlAttributes: new { @class = "control-label col-md-2" })
                                                    @Html.EditorFor(model => model.PRENOMPE, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.PRENOMPE, "", new { @class = "text-danger" })

                                                </div>
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.aspnetusers.Email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                                                    @Html.EditorFor(model => model.aspnetusers.Email, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                                                    @Html.ValidationMessageFor(model => model.aspnetusers.Email, "", new { @class = "text-danger" })
                                                </div>

                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.IDFONCTION, "Fonction", htmlAttributes: new { @class = "control-label col-md-2" })
                                                    @Html.DropDownList("IDFONCTION", null, htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.IDFONCTION, "", new { @class = "text-danger" })
                                                </div>
                                                <div class="form-group">

                                                </div>

                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.STATUT, "Statut", htmlAttributes: new { @class = "control-label col-md-2" })
                                                    <div class="radioLeft col-sm-8">
                                                        @Html.RadioButtonFor(model => model.STATUT, "xxx")xxx
                                                        @Html.RadioButtonFor(model => model.STATUT, "yyy")yyy
                                                        @Html.RadioButtonFor(model => model.STATUT, "zzz")zzz

                                                        @Html.ValidationMessageFor(model => model.STATUT, "", new { @class = "text-danger" })

                                                    </div>




                                                </div>
                                                <br />
                                                <br />
                                                <div class="margiv-top-10">
                                                    <div>
                                                        <input type="submit" value="Sauvegarder" class="btn green-haze" />@Html.ActionLink("Back to List", "Index", null, new { @class = "btn default" })
                                                    </div>
                                                </div>


                                            }
                                        </div>
                                        <!-- END PERSONAL INFO TAB -->
                                        <!-- CHANGE AVATAR TAB -->
                                        <div class="tab-pane" id="tab_1_2">
                                            <p>
                                                Anim pariatur cliche reprehenderit, enim eiusmod high life accusamus terry richardson ad squid. 3 wolf moon officia aute, non cupidatat skateboard dolor brunch. Food truck quinoa nesciunt laborum eiusmod.
                                            </p>
                                            <form action="#" role="form">
                                                <div class="form-group">
                                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
                                                            <img src="http://www.placehold.it/200x150/EFEFEF/AAAAAA&amp;text=no+image" alt="" />
                                                        </div>
                                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;">
                                                        </div>
                                                        <div>
                                                            <span class="btn default btn-file">
                                                                <span class="fileinput-new">
                                                                    Select image
                                                                </span>
                                                                <span class="fileinput-exists">
                                                                    Change
                                                                </span>
                                                                <input type="file" name="...">
                                                            </span>
                                                            <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput">
                                                                Remove
                                                            </a>
                                                        </div>
                                                    </div>
                                                    <div class="clearfix margin-top-10">
                                                        <span class="label label-danger">NOTE! </span>
                                                        <span>Attached image thumbnail is supported in Latest Firefox, Chrome, Opera, Safari and Internet Explorer 10 only </span>
                                                    </div>
                                                </div>
                                                <div class="margin-top-10">
                                                    <a href="javascript:;" class="btn green-haze">
                                                        Submit
                                                    </a>
                                                    <a href="javascript:;" class="btn default">
                                                        Cancel
                                                    </a>
                                                </div>
                                            </form>
                                        </div>
                                        <!-- END CHANGE AVATAR TAB -->
                                        <!-- CHANGE PASSWORD TAB -->
                                        <!-- END CHANGE PASSWORD TAB -->
                                        <!-- PRIVACY SETTINGS TAB -->
                                        <!-- END PRIVACY SETTINGS TAB -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- END PROFILE CONTENT -->
            </div>
            </div>
        </div>
        </div>

